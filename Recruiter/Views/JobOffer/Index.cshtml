@model IEnumerable<JobOffer>

@{
    ViewData["Title"] = "Job offers";
}

<div class="row page-box">
    <h2>Job offers</h2>
    @using (Html.BeginForm("Index", "JobOffer", FormMethod.Get))
    {
        <div class="input-group col-md-12" style="margin-bottom: 14px">
            <input type="text" class="form-control" placeholder="Look for your next job..."
                   name="search" id="search" />
            <span class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    }
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Job title</th>
                <th scope="col">Company</th>
                <th scope="col">Location</th>
                <th scope="col">Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach(JobOffer x in Model.OrderBy(o => o.Created))
            {
                <tr>
                    <td>@Html.ActionLink(x.JobTitle, "Details", new { id = x.Id })</td>
                    <td>@x.Company.Name</td>
                    <td>@x.Location</td>
                    <td>@x.Created</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Create new offer", "Create", "JobOffer", null, new { @class="btn btn-primary"})

</div>